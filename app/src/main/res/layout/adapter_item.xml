<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_adapter"
    android:layout_margin="2dp"
    android:padding="2dp"
    app:cardBackgroundColor="@color/AliceBlue"
    app:cardCornerRadius="3dp"
    app:cardElevation="30dp"
    app:strokeColor="@color/Blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view_name_adapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="10dp"
                android:background="@color/AliceBlue"
                android:fontFamily="@font/google_sans_bold"
                android:padding="5dp"
                android:layout_margin="1dp"
                android:text="Name"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:layout_margin="1dp"
                android:id="@+id/text_view_roll_adapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/AliceBlue"
                android:fontFamily="@font/google_sans_medium"
                android:padding="5dp"
                android:elevation="10dp"
                android:text="Roll"
                android:textAlignment="center"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="1dp"
                android:id="@+id/text_view_phone_adapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/AliceBlue"
                android:fontFamily="@font/google_sans_medium"
                android:padding="5dp"
                android:text="Phone Number"
                android:textAlignment="center"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/text_view_blood_adapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/AliceBlue"
                android:textColor="@color/Red"
                android:textColorHighlight="@color/Black"
                android:fontFamily="@font/google_sans_mediumtalic"
                android:padding="5dp"
                android:text="Blood"
                android:textAlignment="center"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_call_adapter"
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Call"
                android:textAlignment="center"
                app:icon="@drawable/ic_call_white_18dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:text="Send text"
                android:textAlignment="center"
                android:layout_margin="1dp"
                android:id="@+id/button_text_adapter"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:textColorHighlight="@color/Black"
                app:icon="@drawable/ic_textsms_black_18dp" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
